<div class ="container">
	<div class="row mx-auto justify-content-center">
		<h1>Eat-Da-Burger!</h1>
		<img src="assets/picture/burger.jpg" alt="burger">
	</div>

	<div class="row justify-content-center">
		<div class="col-6">
			<table>
		
		{{#each burgers}}
		<tr>
			{{#unless devoured}}
				<td>{{burger_name}}</td>
				<td><button id="devour-burger" type="button" data-id="{{id}}" data-newDevour="{{devour}}">Devour It</button></td>
				
			{{/unless}}
		</tr>
		{{/each}}

		</table>
		</div>

		<div class="col-6">
		<ol>
		{{#each burgers}}
			{{#if devoured}}
				<li>{{burger_name}}</li>
			{{/if}}
		{{/each}}
		</ol>
		</div>
	</div>

	<div class="row justify-content-center">
		<form class="create-form">
			<div class="form-group">
    			<input type="text" id="newBurg" name="name">
  			</div>
			<button type="submit" id= "submitBtn">Submit</button>
  			<p>Enter a burger you would like to eat and click "Submit".</p>
		</form>
	</div>

</div>